<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TipCalculator.Views.Aportaciones"
             Title="Aportaciones">

        <StackLayout>
            <Label Text="Número de Comensales:" />
            <Entry x:Name="numComensales" Placeholder="Ingrese el número de comensales" Keyboard="Numeric" />

            <Label Text="Cantidad a Aportar:" />
            <Entry x:Name="cantidadAportar" Placeholder="Ingrese la cantidad a aportar" Keyboard="Numeric" />

            <Button Text="Calcular Aportación" Clicked="CalcularAportacion" />
            <Button Text="Limpiar" Clicked="LimpiarAportaciones" />
            <Label Text="Resultado Aportaciones:" />
            <Label x:Name="resultAportacionesLabel" FontSize="18" />
        </StackLayout>

</ContentPage>