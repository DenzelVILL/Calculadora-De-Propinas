    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    
    xmlns:local="clr-namespace:TipCalculator.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        
        <ShellContent 
            Title="Calculadora de propinas"
            Route="TipCalculatorPage" 
            ContentTemplate="{DataTemplate local:TipCalculatorPage}" />

        <ShellContent 
    Title="Aportaciones" 
    Route="AportacionPage"
    ContentTemplate="{DataTemplate local:AportacionPage}" />
        
        <ShellContent 
    Title="Acerca De" 
    Route="AboutPage"
    ContentTemplate="{DataTemplate local:AboutPage}" />

    </TabBar>
</Shell>
