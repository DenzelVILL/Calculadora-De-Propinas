<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TipCalculator.Views.TipCalculatorPage">

    <StackLayout>
        <Label Text="Calculadora de Propinas" FontSize="20" HorizontalOptions="CenterAndExpand" Margin="0,10,0,20" />

        <Label Text="Importe Total:" />
        <Entry x:Name="totaltip" Placeholder="Ingrese el importe total" Keyboard="Numeric" />

        <Label Text="Porcentaje de Propina:" />
        <Slider x:Name="barraporcentaje" Maximum="30" Minimum="0" />
        <Label Text="{Binding Value, Source={x:Reference barraporcentaje}, StringFormat='Porcentaje: {0:F0}%'}" />

        <Label Text="Número de Personas:" />
        <Entry x:Name="NumPersona" Placeholder="Ingrese el número de personas" Keyboard="Numeric" />

        <Button Text="Calcular Propina" Clicked="CalcularPropina" />
        <Button Text="Limpiar" Clicked="LimpiarDatos" />
        <Label Text="Resultado:" />
        <Label x:Name="resultLabel" FontSize="18" />
    </StackLayout>
</ContentPage>